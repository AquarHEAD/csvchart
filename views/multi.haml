.row
  .col-md-8.col-md-offset-2
    %h1
      Multi Chart
      %small
        %a.btn.btn-info{href: "/"} Back to Index
    %form#choices.form-inline{action: "javascript:void(0);"}
      .checkbox
        %label
          %input{type: "checkbox", name: "frame", checked: "checked", id: "check_frame"}
          Frame
      .checkbox
        %label
          %input{type: "checkbox", name: "gt", checked: "checked", id: "check_gt"}
          Game Thread
      .checkbox
        %label
          %input{type: "checkbox", name: "rt", checked: "checked", id: "check_rt"}
          Render Thread
      %button.btn.btn-default{type: "submit", id: "replot"} Replot
- @files.each_index do |idx|
  .row
    .col-md-8.col-md-offset-2
      %h3
        = @files[idx][:basename]
  .row
    .col-md-6
      .well{id: "leftevents#{idx}"}
    .col-md-6
      .well{id: "rightevents#{idx}"}
  .row
    .chart{style: "width:100%; height:450px; margin: 20 auto;", id: "chart#{idx}"}
    .overview{style: "width:100%; height: 150px; margin: 20 auto;", id: "overview#{idx}"}
  :javascript
    app(#{@files[idx][:fd]}, #{@files[idx][:gd]}, #{@files[idx][:rd]}, "#chart#{idx}", "#overview#{idx}", "#leftevents#{idx}", "#rightevents#{idx}", #{@files[idx][:ed]});
